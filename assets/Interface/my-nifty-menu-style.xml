<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles>
  <!-- nifty menu item style -->
  <style id="myNiftyMenuItemStyle">
    <attributes width="100%" childLayout="horizontal" focusable="true" />
    <effect>
      <onHover name="focus" />
      <onFocus name="colorBar" color="#4448" />
    </effect>
  </style>  

  <style id="myNiftyMenuItemStyle#text" base="nifty-label">
    <attributes textHAlign="left" width="*" color="#222f" />
    <effect>
      <onEnabled name="textColorAnimated" startColor="#777f" endColor="#222f" post="false" length="150" />
      <onDisabled name="textColorAnimated" startColor="#222f" endColor="#777f" post="false" length="150" />
    </effect>
  </style>  

  <!-- nifty menu item separator style -->
  <style id="myNiftyMenuItemSeparatorStyle">
    <attributes width="100%" height="10px" childLayout="center" paddingLeft="5px" paddingRight="5px" />
  </style>  

  <style id="myNiftyMenuItemSeparatorStyle#line">
    <attributes width="100%" height="1px" align="center" valign="center" backgroundColor="#777f" />
  </style>
</nifty-styles>
